<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Windows 11 Typography Styles -->
    <Style x:Key="Win11CaptionText" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextColor" Value="{StaticResource Gray120}" />
    </Style>

    <Style x:Key="Win11BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextColor" Value="{StaticResource Gray150}" />
    </Style>

    <Style x:Key="Win11SubtitleText" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Gray150}" />
    </Style>

    <Style x:Key="Win11TitleText" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Gray150}" />
    </Style>

    <Style x:Key="Win11LargeTitleText" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Gray150}" />
    </Style>

    <!-- Windows 11 Card Style -->
    <Style x:Key="Win11Card" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="Stroke" Value="{StaticResource Gray40}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Windows 11 Button Styles -->
    <Style x:Key="Win11PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style x:Key="Win11SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
    </Style>

    <Style x:Key="Win11DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- Windows 11 Entry Style -->
    <Style x:Key="Win11Entry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="TextColor" Value="{StaticResource Gray150}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray90}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="32" />
    </Style>

    <!-- Windows 11 Progress Bar Style -->
    <Style x:Key="Win11ProgressBar" TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource Primary}" />
        <Setter Property="HeightRequest" Value="4" />
    </Style>

    <!-- Windows 11 Status Colors -->
    <Style x:Key="Win11SuccessText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Success}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Win11ErrorText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Error}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Win11WarningText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Warning}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Win11InfoText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Info}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>